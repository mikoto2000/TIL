{
  "name": "firststep",
  "scopeName": "source.firststep",
  "fileTypes": [
    ".firststep"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.firststep",
      "match": "\\b(Hello|person)\\b"
    },
    {
      "name": "string.quoted.double.firststep",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "string.quoted.single.firststep",
      "begin": "'",
      "end": "'"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.firststep",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.firststep"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.firststep"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.firststep"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.firststep"
        }
      ]
    }
  }
}